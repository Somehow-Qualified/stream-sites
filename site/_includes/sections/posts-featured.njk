<section class="w-full px-6 py-16 md:py-20 flex flex-col items-center justify-center">

  {% if section.headline or section.text %}
  <div class="max-w-2xl pb-12 font-extrabold text-center">
    {% if section.headline %}
    <h2 class=" text-4xl leading-tight ">{{ section.headline }}</h2>
    {% endif %}
    {% if section.text %}
    <p>{{ section.text }}</p>
    {% endif %}
  </div>
  {% endif %}

  <div class="w-full md:min-w-2xl lg:min-w-4xl max-w-6xl mx-auto {% if section.headline or section.text != "" %}pt-10{% endif %}">
    <div class="flex flex-wrap -mx-2">
    {% set postslist = collections.posts | limit(3) %}
    {% include 'postslist.njk' %}
    </div>
  </div>

</section>
