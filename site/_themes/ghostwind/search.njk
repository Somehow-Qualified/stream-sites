---
layout: default.njk
---
<section class="mx-auto px-6">
  <div class="text-center pt-20 pb-12">
    <p class="text-sm md:text-base text-{{ theme.colors.accent }}-600 dark:text-{{ theme.colors.main }}-100 font-bold {{ fontMeta }}">{{ subtitle | upper }}</p>
    <h1 class="font-bold break-normal text-3xl md:text-5xl">{{ title }}</h1>
  </div>
  <div class="container max-w-5xl mx-auto pb-20 dark:text-{{ theme.colors.main }}-100 text-center">
    <div class="pb-16 w-full">
      <p class="mb-1">{{ heading_form }}</p>
      {% include "search.njk" %}
    </div>
    <p class="mb-1">{{ heading_tags }}</p>
    {% include "taglist.njk" %}
  </div>
</section>
