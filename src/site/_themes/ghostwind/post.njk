  <h2 class="{{ fontMorePosts }} text-2xl md:text-3xl px-8 m-0 py-12 text-center text-{{ theme.colors.accent }}-100">{{ morePosts }}</h2>
  <div class="flex flex-wrap mx-auto max-w-6xl justify-center">
