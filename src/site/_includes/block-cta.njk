{# CTA Block #}
<div class="container text-{{ theme.colors.main }}-100 bg-{{ theme.colors.main }}-800 p-4 md:p-16 text-center md:rounded w-11/12 md:w-full mx-auto shadow-md hover:shadow-lg">
  <h2 class="font-bold break-normal text-2xl md:text-4xl">Subscribe to {{ site.name }}</h2>
  <p class="font-bold break-normal font-normal text-base md:text-xl">Get the latest posts delivered to your feed reader.</p>
  <div class="w-full text-center py-4 flex -mx-3 justify-center">
    <a href="/atom.xml" title="Subscribe via Atom" class="bg-transparent border border-{{ theme.colors.accent }}-500 hover:bg-{{ theme.colors.accent }}-400 text-sm text-{{ theme.colors.main }}-100 hover:text-{{ theme.colors.main }}-900 dark:text-{{ theme.colors.main }}-100 dark-hover:text-{{ theme.colors.main }}-900 font-bold py-2 px-4 rounded-full mx-3">Atom <svg class="inline-block font-normal" fill="currentColor" role="img" aria-hidden="true" width="10" height="10">
      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#subscribe"></use>
    </svg></a>
    <a href="/rss.xml" title="Subscribe via RSS" class="bg-transparent border border-{{ theme.colors.accent }}-500 hover:bg-{{ theme.colors.accent }}-400 text-sm text-{{ theme.colors.main }}-100 hover:text-{{ theme.colors.main }}-900 dark:text-{{ theme.colors.main }}-100 dark-hover:text-{{ theme.colors.main }}-900 font-bold py-2 px-4 rounded-full mx-3">RSS <svg class="inline-block font-normal" fill="currentColor" role="img" aria-hidden="true" width="10" height="10">
      <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/images/icons/icon-library.svg#subscribe"></use>
    </svg></a>
  </div>
</div>
